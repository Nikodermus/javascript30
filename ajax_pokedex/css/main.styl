@import 'nib'
global-reset()

*
*::after
*::before 
	box-sizing border-box
	transform translateZ(0)
	transition  0.5 all ease
	border none
	&:hover
	&:active
	&:focus
		transition  0.5 all ease
		border none
html
body
	height 100%
	width 100%
	font-family sans-serif
	overflow-x hidden
	max-width 100vw
img 
	object-fit contain
	max-width 100%

.type
	border-radius 10px
	color white
	font-weight 400
	padding .2em .5rem
	font-size 0.7rem
	background black
	border 1px solid darker(@background, 1.2)
	display inline-block
	padding-top .25rem
	&.normal
		background #A8A878
		border 1px solid darker(@background, 1.2)
	&.fire
		background #F08030
		border 1px solid darker(@background, 1.2) 
	&.fighting
		background #C03028
		border 1px solid darker(@background, 1.2) 
	&.water
		background #6890F0
		border 1px solid darker(@background, 1.2) 
	&.flying
		background #A890F0
		border 1px solid darker(@background, 1.2) 
	&.grass
		background #78C850
		border 1px solid darker(@background, 1.2) 
	&.poison
		background #A040A0
		border 1px solid darker(@background, 1.2) 
	&.electric
		background #F8D030
		border 1px solid darker(@background, 1.2) 
	&.ground
		background #E0C068
		border 1px solid darker(@background, 1.2) 
	&.psychic
		background #F85888
		border 1px solid darker(@background, 1.2) 
	&.rock
		background #B8A038
		border 1px solid darker(@background, 1.2) 
	&.ice
		background #98D8D8
		border 1px solid darker(@background, 1.2) 
	&.bug
		background #A8B820
		border 1px solid darker(@background, 1.2) 
	&.dragon
		background #7038F8
		border 1px solid darker(@background, 1.2) 
	&.ghost
		background #705898
		border 1px solid darker(@background, 1.2) 
	&.dark
		background #705848
		border 1px solid darker(@background, 1.2) 
	&.steel
		background #B8B8D0
		border 1px solid darker(@background, 1.2) 
	&.fairy
		background #EE99AC
		border 1px solid darker(@background, 1.2) 
body
	max-width 50%
	min-width 400px
	margin auto
	background transparent
	text-align center
	overflow hidden
html
	background url('../resources/bg.png')
	background-size cover
	background-attachment fixed
	background-position 60% center
input 
	padding .6rem 2rem 1.4rem 2rem
	font-size 1.5rem
	margin auto
	margin-top 1rem
.suggestions
	width 80%
	margin auto
	margin-top -1rem
	background #2C2C2C
	color white
	li
		border-bottom 1px solid gray
		display flex
		img 
			width 25%
			margin 1rem 1.5rem
		.info
			width 75%
			padding-right 10%
			h1
				margin-top 1.8rem
				margin-bottom .5rem
				text-transform capitalize
		&:last-of-type
			border-bottom 0
.hl
	background-color #845d0d
