@import 'nib'
global-reset()

*
*::after
*::before
	box-sizing border-box
	transform translateZ(0)
	transition  0.5 all ease
	&:hover
	&:active
	&:focus
		transition  0.5 all ease
html
body
	height 100%
	width 100%
	font-family sans-serif
	max-width 100vw
	background #303030
body
	overflow-x hidden
img
	object-fit contain
	max-width 100%

h1
	margin 2rem
	text-align center
	font-weight 700
	font-size 1.8rem
	text-transform uppercase
	letter-spacing -1.3px
p
	margin-bottom 1rem
	line-height 120%

.site-wrap
	max-width  700px
	margin auto
	background white
	padding 40px
	text-align  justify


.align-left
	float left
	margin-right 20px


.align-right
	float right
	margin-left 20px


.slide-in
	opacity 0
	transition all .5s


.align-left.slide-in
	transform translateX(-30%) scale(0.95)

.align-right.slide-in
	transform translateX(30%) scale(0.95)


.slide-in.active
	opacity 1
	transform translateX(0%) scale(1)
