@import 'nib'
global-reset()

*
*::after
*::before
	box-sizing border-box
	transform translateZ(0)
	transition  0.5 all ease
	&:hover
	&:active
	&:focus
		transition  0.5 all ease
html
body
	height 100%
	width 100%
	font-family sans-serif
	overflow-x hidden
	max-width 100vw
html
	background black
	text-align center

body
	margin auto
	display flex
	justify-content center
	align-items center
	background #0067A1
	max-width 550px
.clip-top
	clip-path polygon(108px 170px, 446px 167px, 553px -4px, -2px -7px)
	background black
	height 200px
	width 100%
	absolute top left
.clip-bottom
	clip-path polygon(40% 90%, 60% 90%, 85% 60%, 85% 25%, 50% 40%, 15% 25%,15% 60%)
	background #e7c7ac
	height 370px
	width 100%
	absolute bottom left
	z-index -1
.main
	text-align center
	width 100%
	height 100%
.head
	background #0067A1
	height 200px
	width 100%
	absolute top 19% left 0
	border-radius 50%
h1
	font-size 5.5rem
	font-weight 700
	letter-spacing -2px
	text-transform uppercase
	color white
	relative top 42%
	font-family sans-serif
	text-shadow 0 0 5px black
p
	background #F8F772
	padding 2rem 3rem 0
	width 50%
	text-align center
	border-radius 50%
	font-size 5rem
	margin 0 auto
img
	object-fit contain
	max-width 100%