@import 'nib'
global-reset()

*
*::after
*::before 
	box-sizing border-box
	transform translateZ(0)
	transition all ease 0.3s
	&:hover
		transition all ease 0.3s

html
body
	height 100%
	width 100%
	font-family sans-serif
	overflow-x hidden
	max-width 100vw
img 
	object-fit contain
	max-width 100%
.panels
	height 100vh
	overflow hidden
	display flex
	justify-content space-around
	align-items center
	.panel
		background purple 
		width 20%
		height 100%
		background-size cover
		background-attachment fixed
		background-align center center
		color white
		filter saturate(0)
		for i in (1..5)
			&.panel{i}
				background-image url('../resources/bg-'+i+'.jpg')
		p
			height 20%
			color white
			white-space nowrap
			text-transform uppercase
			text-align center
			vertical-align middle
			transform translateY(50%)
			text-shadow 0px 2px 3px rgba(0,0,0,0.9)
			&:first-child
				transform translateY(-200%)
			&:last-child
				transform translateY(200%)
			&:nth-child(2)
				font-size 1.5rem
				font-weight 800
				height 60%
	&:hover
		.panel
			width 10%
			&:hover
				width 60%
				filter saturate(1)
				p
					&:first-child
					&:last-child
						transform translateY(50%)
					&:nth-child(2)
						font-size 2rem
					

		
			
			
		