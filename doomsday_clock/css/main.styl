@import 'nib'
global-reset()

*
*::after
*::before 
	box-sizing border-box
	transform translateZ(0)
html
body
	height 100%
	width 100%

body
	background url('../resources/bg.jpg')
	background-size cover
	display flex
	justify-content center
	align-items center
	background-position-x 21%

.clock
	width 15rem
	height 15rem
	border-radius 50%
	border 10px solid white
	opacity 0
	transition 3s all .5s ease
	.clock-face
		position relative
		width 100%
		height 100%
	.hand
		height 5px
		background white
		absolute top 50% left 10px
		margin auto
		transform-origin 100%
		transform rotate(90deg)
		width calc(50% - 10px)
		transition all .5s cubic-bezier(0.38, 2.22, 0.43, 0.28)
		
		&.seg
			height 2px
	.pivot
		absolute top 50% left 50%
		transform translate(-50%, -50%)
		margin auto
		height 1rem
		width 1rem
		border-radius 50%
		background white