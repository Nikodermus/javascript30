@import 'nib'
global-reset()

@keyframes rotate
	0%
		transform rotate(0deg)
	20%
		transform  rotate(360deg)
	100%
		transform  rotate(360deg)

*
*::after
*::before
	box-sizing border-box
	transform translateZ(0)
	transition  0.5 all ease
	&:hover
	&:active
	&:focus
		transition  0.5 all ease
html
body
	height 100%
	width 100%
	font-family sans-serif
	overflow-x hidden
	max-width 100vw
	background transparent
html
	background url(../resources/bg.jpg)
	background-position right center
	background-size cover
	display flex
	align-items center
	justify-content flex-end
body
	width 30%
	min-width 350px
	float right
	margin-right 10%
	height auto
	text-align center
	transform translateY(-20%)

img
	object-fit contain
	max-width 100%
	width 20%
	margin-bottom 3rem
	animation rotate 6s ease infinite forwards

.wrapper
	background alpha(white, .5)
	padding 1.2rem
	text-align left
	h2
		font-size 2rem
		font-weight 700
		margin 1rem 0
		text-align center
		text-transform uppercase
		letter-spacing -2px
		color white
		white-space nowrap
	ul
		margin-bottom 1rem
	form
		width 100%
		display flex
		justify-content space-between
		align-items center
		input
			height 100%
			border 0
			padding .5rem
			&[type=text]
				flex 0 0 70%
			&[type=submit]
				flex 0 0 30%
				background #303030
				color white
				font-weight bold
				&:hover
					cursor pointer