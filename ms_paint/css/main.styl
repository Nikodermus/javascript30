@import 'nib'
global-reset()

*
*::after
*::before 
	box-sizing border-box
	transform translateZ(0)
	transition  0.5 all ease
	&:hover
	&:active
	&:focus
		transition  0.5 all ease
html
body
	height 100%
	width 100%
	font-family sans-serif
	overflow-x hidden
	max-width 100vw
	background #151515
img 
	object-fit contain
	max-width 100%
canvas 
	width 100%
	height 100%