@import 'nib'
global-reset()

*
*::after
*::before
	box-sizing border-box
	transform translateZ(0)
	transition  0.5 all ease
	&:hover
	&:active
	&:focus
		transition  0.5 all ease
html
body
	height 100%
	width 100%
	font-family sans-serif
	overflow-x hidden
	max-width 100vw
img
	object-fit contain
	max-width 100%
body
	display flex
	justify-content center
	align-items center
	text-align center
	background #303030
	background-size cover
	background-attachment fixed
	background-position center center

h1
	color white
	font-size 10vw
	font-weight 600