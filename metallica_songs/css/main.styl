@import 'nib'
global-reset()

*
*::after
*::before
	box-sizing border-box
	transform translateZ(0)
	transition  0.5 all ease
	&:hover
	&:active
	&:focus
		transition  0.5 all ease
html
body
	height 100%
	width 100%
	font-family sans-serif
	overflow-x hidden
	max-width 100vw
	background url(../resources/bg.jpg)
	background-size cover
	background-attachment fixed
	background-position right top
body
	display flex
	justify-content center
	align-items center
ul
	background #E3323A
	border 12px solid black
	color #B7A7A2
	padding 2rem
	width 380px
	font-size 1.4rem
	font-weight 500
	li
		list-style square
		margin-left 1rem
		margin-bottom 1rem
		&:last-of-type
			margin-bottom 0
img
	object-fit contain
	max-width 100%