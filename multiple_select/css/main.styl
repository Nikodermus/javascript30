@import 'nib'
global-reset()

*
*::after
*::before
	box-sizing border-box
	transform translateZ(0)
	transition  0.5 all ease
	&:hover
		transition  0.5 all ease
	&:active
		transition  0.5 all ease
	&:focus
		transition  0.5 all ease
html
body
	height 100%
	width 100%
	font-family sans-serif
	overflow-x hidden
	max-width 100vw
img
	object-fit contain
	max-width 100%
html
	background #bd123a
	display flex
	align-items center
	justify-content center
body
	max-width 400px
	margin auto
	background white
	height auto
	padding 2rem
.item
	padding .85rem
	border-bottom 1px solid #ccc
	input
	p
		display inline-block
	input:checked + p
		text-decoration line-through
	&:last-of-type
		border-bottom 0
	&:hover
		background #dfdfdf


